platform :ios, '9.0'

source 'https://github.com/CocoaPods/Specs.git'
project 'LionheartAlamofireClient.xcodeproj'

inhibit_all_warnings!
use_frameworks!

target 'LionheartAlamofireClient_Example' do
  pod 'Alamofire', :git => "https://github.com/lionheart/Alamofire.git", :commit => 'f42b208'
  pod 'LionheartAlamofireClient', :path => '../'

  target 'LionheartAlamofireClient_Tests' do
    inherit! :search_paths
    pod 'Quick', :git => "https://github.com/Quick/Quick.git", :branch => "swift-3.0"
    pod 'Nimble', :git => "https://github.com/Quick/Nimble.git", :commit => "fcc28b2"
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '3.0'
    end
  end
end
